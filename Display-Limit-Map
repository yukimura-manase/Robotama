    L.marker([51.5, -0.09]).addTo(map).bindPopup('ãƒ­ãƒœç‰ä¸‡æ­³ï¼ï¼ï¼.<br> ç¥è–ã‚°ãƒ³ãƒãƒ¼å¸å›½ã€ä¸‡æ­³ï¼ï¼.');

    L.marker([38.9, -77.01]).addTo(map).bindPopup('ã‚¢ãƒ¡ãƒªã‚«åˆè¡†å›½-Robotama');

    L.marker([38.9, 35.2]).addTo(map).bindPopup('ã‚¤ã‚¹ãƒ©ã‚¨ãƒ«å›½-Robotama') //.openPopup();

    L.marker([41.89, 12.48]).addTo(map).bindPopup('ã‚¤ã‚¿ãƒªã‚¢å…±å’Œå›½-Robotama'); // .openPopup();

    L.marker([52.5, 13.4]).addTo(map).bindPopup('ãƒ‰ã‚¤ãƒ„é€£é‚¦å…±å’Œå›½-Robotama'); // .openPopup();

    // openPopup() ã‚’ã™ã‚‹ã¨ã€Clickã—ãªãã¦ã‚‚ PopupãŒå‡ºç¾ã—ãŸçŠ¶æ…‹(Open-çŠ¶æ…‹)ã«ãªã‚‹ï¼ => 1ã¤ã ã‘
    L.marker([35.68, 139.69]).addTo(map).bindPopup('æ—¥æœ¬-Robotama').openPopup();

